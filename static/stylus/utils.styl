
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}


.color--sky
    color: sky

.color--asphalt
    color: asphalt

 .color--sidewalk
    color: sidewalk

 .color--dyellow
    color: dyellow

 .color--strawberry
    color: strawberry


.fill--white
    background:white

.list--unstyled
  list-style:none
  &, & li
    margin:0
    padding:0


.center
    margin-left: auto
    margin-right: auto


.link-appearance
  text-decoration: underline
  cursor:pointer

/* Opacity */

.fade-out--50
    opacity:0.5

.fade-out--80
    opacity:0.2

/* Spacing */

.push--bottom
    margin-bottom:1em

.push--top
    margin-top:1em

.push--ends
    margin-top:1em
    margin-bottom:1em

.push-half--bottom
    margin-bottom:0.5em

.push-half--top
    margin-top:0.5em

.soft
    padding: 1em

.soft--ends
    padding-top: 1em
    padding-botom: 1em

.soft--sides
    padding-left: 1em
    padding-right: 1em

/* Typography */
.text--normal
    font-weight:400

.text--light
    font-weight:300

.text--bold
    font-weight:700

.text--med
    font-size:0.9em

.text--small
    font-size:0.85em

.text--center
    text-align:center

.text--left
    text-align:left

p
    margin-bottom:0.5em


/* Images */
img
    width:100%


.unselectable
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none


/*- Style text color in input placeholders -*/
input-placeholder-color(color)
  &::-webkit-input-placeholder
   color: color

  &:-moz-placeholder
   color: color

  &:-ms-input-placeholder
   color: color