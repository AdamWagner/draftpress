*, *:after, *:before
    box-sizing: border-box

global-padding()
    padding:1em 0.25em
    +above(screens.tablet)
        padding:0


h2,h3,h4,h5,h6
    font-weight:500

body
    color: asphalt
    line-height:1.6em
    font-family: 'Roboto', sans-serif;
    font-size:1.1em
    +above(screens.tablet)
        font-size:1.5em

.wrapper
    max-width: 800px
    global-padding()


.modal
    position:fixed
    top:0
    bottom:0
    left:0
    right:0
    background:white
    z-index:999
    padding-top:20%


.feature-text
    margin-left:auto
    margin-right:auto
    color:sidewalk
    +above(screens.tablet)
        width:66%
    @extend .text--small